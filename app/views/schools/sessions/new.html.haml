.SchoolWrapper
  .wall
    .FormBox
      %h2 学校管理者ログイン
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          = f.label :メールアドレス
          %br/
          = f.email_field :email, autofocus: true, placeholder: "お試しは）school1@gmail.com", autocomplete: "email"
        .field
          = f.label :パスワード
          %br/
          = f.password_field :password, placeholder: "お試しは）school1", autocomplete: "current-password"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :ログインを保持する
        .actions
          = f.submit "ログイン", class: "submitBtn"
      = render "schools/shared/links"
