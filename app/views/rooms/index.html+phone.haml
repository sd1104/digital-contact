        さん
      = render 'layouts/sp-header-belongs'
      
    .SPWrap__Wrapper__Contents
      .SPWrap__Wrapper__Contents__ButtonsBox
        %ul.WrapperButtons
          %li.WrapperButton
            = link_to '欠席連絡', room_absent_contacts_path(current_user.room_id), class: "menuButton"
