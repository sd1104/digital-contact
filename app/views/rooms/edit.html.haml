.SchoolWrapper
  .TopNav
    .Left
      .Left__userBox
        %h6 ログイン中のユーザー
        .Left__userBox__userName 
          = current_school.school_admin
      .Left__logOutBox
        = link_to 'schoolLogOut', destroy_school_session_path, method: :delete, class: "logOutBtn"
    .Right  
      .Right__infoHead
        .Right__infoHead__userschool
          %h6 学校名
          .Right__infoHead__userschool__schoolName
            = current_school.school_name
        .Right__infoHead__headBox
      .Right__infoMenu
        %ul.breadCrumbsLink
          %li
            クラスを登録します
  .MainNav
    .MainNav__Wrapper
      .MainNav__Wrapper__head
        クラス編集
      .MainNav__Wrapper__editForm
        = form_with model: @room, method: :patch do |f|
          .fields
            .field
              = f.label :学年, class: "label"
              = f.number_field :grade
            .field
              = f.label :クラス名, class: "label"
              = f.text_field :number
            .actions
              = f.submit
            = link_to '戻る', confirm_rooms_path, class: "backLink"
