.UserWrapper
  .wall
    .FormBox
      %p ユーザー登録
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :学校名
          %br/
          = f.collection_select :school_id, School.all, :id, :school_name, { include_blank: true}
        .field
          = f.label :保護者名
          %br/
          = f.text_field :parent_name, autofocus: true, autocomplete: "parent_name"
        .field
          = f.label :児童名
          %br/
          = f.text_field :child_name, autofocus: true, autocomplete: "child_name"
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email"
        .field
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} 文字以上)
          %br/
          = f.password_field :password, autocomplete: "new-password"
        .field
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password"
        .actions
          = f.submit "登録する", class: "submitBtn"
      = render 'devise/sessions/sample-parent-login.html.haml'
      .sp-check
        = render 'devise/sessions/sample-teacher-login.html.haml'
      %br/
      = render "devise/shared/links"